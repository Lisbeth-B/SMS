@model IEnumerable<SalesManagementSystem.db.GetConsultantsByFrequentlySoldProduct_Result>

@{
    ViewBag.Title = "Index";
}

<h2>კონსულტანტები ხშირად გაყიდვადი პროდუქტების მიხედვით</h2>

@using (Html.BeginForm())
{
<div class="form-horizontal">

    <div class="form-group">
        @Html.Label("Start Date", htmlAttributes: new { @class = "control-label col-md-1" })
        @Html.Label("Required", htmlAttributes: new { @class = "control-label col-md-1 text-danger" })
        <div class="col-md-10">
            @Html.Editor("StartDate", new { htmlAttributes = new { @class = "form-control", @type = "datetime-local", @max = "9999-12-31T23:59", @step = "1" } })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("End Date", htmlAttributes: new { @class = "control-label col-md-1" })
        @Html.Label("Required", htmlAttributes: new { @class = "control-label col-md-1 text-danger" })
        <div class="col-md-10">
            @Html.Editor("EndDate", new { htmlAttributes = new { @class = "form-control", @type = "datetime-local", @max = "9999-12-31T23:59", @step = "1" } })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Product Code", htmlAttributes: new { @class = "control-label col-md-1" })
        <div class="col-md-1 "></div>
        <div class="col-md-10">
            @Html.Editor("ProductCode", new { id = "Id", htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Min Amount", htmlAttributes: new { @class = "control-label col-md-1" })
        @Html.Label("Required", htmlAttributes: new { @class = "control-label col-md-1 text-danger" })
        <div class="col-md-10">
            @Html.Editor("MinAmount", new { id = "Id", htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Search" class="btn btn-default" />
        </div>
    </div>

</div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ConsultantId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConsultantName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConsultantSurname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConsultantIdNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConsultantDateOfBirth)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductCodes)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductQuantity)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ConsultantId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConsultantName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConsultantSurname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConsultantIdNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConsultantDateOfBirth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductCodes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductQuantity)
            </td>
        </tr>
    }

</table>
