@model SalesManagementSystem.Models.OrderEntity

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ConsultantId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ConsultantId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.OrderLineItems)
        </dt>

        <dd>
            @foreach (var item in Model.OrderLineItems)
            {
                <div>
                    <span>Code -  @item.ProductCode</span>
                    <span>Quantity - @item.Quantity</span>
                </div>
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
